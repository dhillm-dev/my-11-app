# Root Environment Configuration
# Copy this file to .env and fill in your values

# Development Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/picknwin_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/picknwin_test

# API Configuration
API_PORT=4000
ADMIN_PORT=4001
SECRET_KEY_BASE=your-secret-key-base-here

# External Services
REDIS_URL=redis://localhost:6379

# Email Configuration (Swoosh)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@picknwin.com

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=picknwin-uploads

# Third-party APIs
SOFASCORE_API_KEY=your-sofascore-api-key
RAPIDAPI_KEY=your-rapidapi-key

# Deployment Secrets (for CI/CD)
# FLY_API_TOKEN=your-fly-api-token
# GITHUB_TOKEN=your-github-token