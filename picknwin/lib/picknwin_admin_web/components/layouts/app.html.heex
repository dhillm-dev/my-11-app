<div class="min-h-full">
  <!-- Sidebar -->
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-gray-900 px-6 pb-4">
      <div class="flex h-16 shrink-0 items-center">
        <h1 class="text-white text-xl font-bold">PicknWin Admin</h1>
      </div>
      <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
          <li>
            <ul role="list" class="-mx-2 space-y-1">
              <li>
                <.link
                  navigate={~p"/dashboard"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(@conn.request_path == "/" or @conn.request_path == "/dashboard",
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-home" class="h-6 w-6 shrink-0" />
                  Dashboard
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/matches"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/matches"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-trophy" class="h-6 w-6 shrink-0" />
                  Matches
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/contests"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/contests"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-puzzle-piece" class="h-6 w-6 shrink-0" />
                  Contests
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/players"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/players"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-user-group" class="h-6 w-6 shrink-0" />
                  Players
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/users"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/users"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-users" class="h-6 w-6 shrink-0" />
                  Users
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/wallets"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/wallets"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-credit-card" class="h-6 w-6 shrink-0" />
                  Wallet
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/reports"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/reports"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-chart-bar" class="h-6 w-6 shrink-0" />
                  Reports
                </.link>
              </li>
              <li>
                <.link
                  navigate={~p"/admin/settings"}
                  class={[
                    "group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold",
                    if(String.starts_with?(@conn.request_path, "/admin/settings"),
                      do: "bg-gray-800 text-white",
                      else: "text-gray-400 hover:text-white hover:bg-gray-800"
                    )
                  ]}
                >
                  <.icon name="hero-cog-6-tooth" class="h-6 w-6 shrink-0" />
                  Settings
                </.link>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <!-- Mobile menu button -->
  <div class="sticky top-0 z-40 flex items-center gap-x-6 bg-gray-900 px-4 py-4 shadow-sm sm:px-6 lg:hidden">
    <button type="button" class="-m-2.5 p-2.5 text-gray-400 lg:hidden">
      <span class="sr-only">Open sidebar</span>
      <.icon name="hero-bars-3" class="h-6 w-6" />
    </button>
    <div class="flex-1 text-sm font-semibold leading-6 text-white">PicknWin Admin</div>
  </div>

  <!-- Main content -->
  <main class="lg:pl-72">
    <!-- Top bar -->
    <div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
      <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
        <!-- Search -->
        <form class="relative flex flex-1" action="#" method="GET">
          <label for="search-field" class="sr-only">Search</label>
          <.icon name="hero-magnifying-glass" class="pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-gray-400" />
          <input
            id="search-field"
            class="block h-full w-full border-0 py-0 pl-8 pr-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm"
            placeholder="Search..."
            type="search"
            name="search"
          />
        </form>
        <div class="flex items-center gap-x-4 lg:gap-x-6">
          <!-- Locale selector -->
          <div class="relative">
            <select class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
              <option>EN</option>
              <option>ES</option>
              <option>FR</option>
            </select>
          </div>

          <!-- Separator -->
          <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-gray-200" aria-hidden="true"></div>

          <!-- Profile dropdown -->
          <div class="relative">
            <button type="button" class="-m-1.5 flex items-center p-1.5" id="user-menu-button">
              <span class="sr-only">Open user menu</span>
              <div class="h-8 w-8 rounded-full bg-gray-50 flex items-center justify-center">
                <.icon name="hero-user" class="h-5 w-5 text-gray-400" />
              </div>
              <span class="hidden lg:flex lg:items-center">
                <span class="ml-4 text-sm font-semibold leading-6 text-gray-900"><%= @current_admin.email %></span>
                <.icon name="hero-chevron-down" class="ml-2 h-5 w-5 text-gray-400" />
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Page content -->
    <div class="px-4 py-10 sm:px-6 lg:px-8 lg:py-6">
      <!-- Breadcrumbs -->
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <div>
              <.link navigate={~p"/dashboard"} class="text-gray-400 hover:text-gray-500">
                <.icon name="hero-home" class="h-5 w-5 flex-shrink-0" />
                <span class="sr-only">Home</span>
              </.link>
            </div>
          </li>
          <%= if assigns[:breadcrumbs] do %>
            <li :for={breadcrumb <- @breadcrumbs}>
              <div class="flex items-center">
                <.icon name="hero-chevron-right" class="h-5 w-5 flex-shrink-0 text-gray-400" />
                <.link
                  navigate={breadcrumb.path}
                  class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700"
                >
                  <%= breadcrumb.name %>
                </.link>
              </div>
            </li>
          <% end %>
        </ol>
      </nav>

      <!-- Flash messages -->
      <.flash_group flash={@flash} />

      <!-- Page content -->
      <%= @inner_content %>
    </div>
  </main>
</div>