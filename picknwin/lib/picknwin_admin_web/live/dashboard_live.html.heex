<div class="space-y-6">
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Active Contests -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-trophy" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Active Contests</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @stats.active_contests %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Entries -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-users" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Entries</dt>
              <dd class="text-lg font-medium text-gray-900"><%= Number.Delimit.number_to_delimited(@stats.total_entries) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- GGR -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-currency-dollar" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Gross Gaming Revenue</dt>
              <dd class="text-lg font-medium text-gray-900">$<%= :erlang.float_to_binary(@stats.gross_gaming_revenue, decimals: 2) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Payouts -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-banknotes" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Payouts</dt>
              <dd class="text-lg font-medium text-gray-900">$<%= :erlang.float_to_binary(@stats.total_payouts, decimals: 2) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Active Users -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-user-group" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Active Users</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @stats.active_users %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Pending KYC -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <.icon name="hero-identification" class="h-6 w-6 text-gray-400" />
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Pending KYC</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @stats.pending_kyc %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Incidents -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Incidents</h3>
        <button
          type="button"
          phx-click="refresh"
          class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          <.icon name="hero-arrow-path" class="-ml-0.5 mr-2 h-4 w-4" />
          Refresh
        </button>
      </div>
      
      <div class="flow-root">
        <ul role="list" class="-mb-8">
          <li :for={{incident, index} <- Enum.with_index(@recent_incidents)} class="relative pb-8">
            <%= if index < length(@recent_incidents) - 1 do %>
              <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
            <% end %>
            <div class="relative flex space-x-3">
              <div class={[
                "h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white",
                case incident.type do
                  "error" -> "bg-red-500"
                  "warning" -> "bg-yellow-500"
                  "info" -> "bg-blue-500"
                  _ -> "bg-gray-500"
                end
              ]}>
                <.icon name={case incident.type do
                  "error" -> "hero-x-mark"
                  "warning" -> "hero-exclamation-triangle"
                  "info" -> "hero-information-circle"
                  _ -> "hero-bell"
                end} class="h-5 w-5 text-white" />
              </div>
              <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                <div>
                  <p class="text-sm text-gray-500"><%= incident.message %></p>
                </div>
                <div class="text-right text-sm whitespace-nowrap text-gray-500">
                  <time datetime={DateTime.to_iso8601(incident.timestamp)}>
                    <%= Timex.from_now(incident.timestamp) %>
                  </time>
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <.link
          navigate={~p"/matches"}
          class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500 rounded-lg border border-gray-300 hover:border-gray-400"
        >
          <div>
            <span class="rounded-lg inline-flex p-3 bg-teal-50 text-teal-700 ring-4 ring-white">
              <.icon name="hero-trophy" class="h-6 w-6" />
            </span>
          </div>
          <div class="mt-8">
            <h3 class="text-lg font-medium">
              <span class="absolute inset-0" aria-hidden="true"></span>
              Manage Matches
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              Curate and manage cricket matches
            </p>
          </div>
        </.link>

        <.link
          navigate={~p"/contests"}
          class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500 rounded-lg border border-gray-300 hover:border-gray-400"
        >
          <div>
            <span class="rounded-lg inline-flex p-3 bg-purple-50 text-purple-700 ring-4 ring-white">
              <.icon name="hero-puzzle-piece" class="h-6 w-6" />
            </span>
          </div>
          <div class="mt-8">
            <h3 class="text-lg font-medium">
              <span class="absolute inset-0" aria-hidden="true"></span>
              Manage Contests
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              Create and manage fantasy contests
            </p>
          </div>
        </.link>

        <.link
          navigate={~p"/users"}
          class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500 rounded-lg border border-gray-300 hover:border-gray-400"
        >
          <div>
            <span class="rounded-lg inline-flex p-3 bg-sky-50 text-sky-700 ring-4 ring-white">
              <.icon name="hero-users" class="h-6 w-6" />
            </span>
          </div>
          <div class="mt-8">
            <h3 class="text-lg font-medium">
              <span class="absolute inset-0" aria-hidden="true"></span>
              User Management
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              Manage user accounts and KYC
            </p>
          </div>
        </.link>

        <.link
          navigate={~p"/reports"}
          class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500 rounded-lg border border-gray-300 hover:border-gray-400"
        >
          <div>
            <span class="rounded-lg inline-flex p-3 bg-yellow-50 text-yellow-700 ring-4 ring-white">
              <.icon name="hero-chart-bar" class="h-6 w-6" />
            </span>
          </div>
          <div class="mt-8">
            <h3 class="text-lg font-medium">
              <span class="absolute inset-0" aria-hidden="true"></span>
              Reports & Analytics
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              View detailed reports and analytics
            </p>
          </div>
        </.link>
      </div>
    </div>
  </div>
</div>