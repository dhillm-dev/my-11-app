<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Reports & Analytics</h1>
      <p class="mt-2 text-sm text-gray-700">
        Generate and export comprehensive reports for your Dream11 platform.
      </p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <button
        type="button"
        phx-click="generate_report"
        class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
      >
        <.icon name="hero-arrow-path" class="h-4 w-4 mr-2" />
        Generate Report
      </button>
    </div>
  </div>

  <!-- Report Type Selection -->
  <div class="mt-8">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <%= for {name, type} <- report_types() do %>
          <button
            phx-click="select_report_type"
            phx-value-type={type}
            class={[
              "whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium",
              if(@selected_report_type == type,
                do: "border-indigo-500 text-indigo-600",
                else: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
              )
            ]}
          >
            <%= name %>
          </button>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Date Range Filter -->
  <div class="mt-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
      <div>
        <label for="date_from" class="block text-sm font-medium leading-6 text-gray-900">
          From Date
        </label>
        <div class="mt-2">
          <input
            type="date"
            name="date_from"
            id="date_from"
            value={@date_range.from}
            phx-change="date_range_change"
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
          />
        </div>
      </div>
      <div>
        <label for="date_to" class="block text-sm font-medium leading-6 text-gray-900">
          To Date
        </label>
        <div class="mt-2">
          <input
            type="date"
            name="date_to"
            id="date_to"
            value={@date_range.to}
            phx-change="date_range_change"
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
          />
        </div>
      </div>
      <div>
        <label for="export_format" class="block text-sm font-medium leading-6 text-gray-900">
          Export Format
        </label>
        <div class="mt-2">
          <select
            id="export_format"
            name="export_format"
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
          >
            <%= for {name, value} <- export_formats() do %>
              <option value={value} selected={@export_format == value}><%= name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Report Data Display -->
  <%= if @report_data do %>
    <div class="mt-8">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">
            <%= String.replace(@selected_report_type, "_", " ") |> String.capitalize() %> Report
          </h3>
          
          <%= case @selected_report_type do %>
            <% "overview" -> %>
              <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @report_data.total_users |> Number.Delimit.number_to_delimited() %></dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Active Users</dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @report_data.active_users |> Number.Delimit.number_to_delimited() %></dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Contests</dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @report_data.total_contests %></dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Active Contests</dt>
                  <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @report_data.active_contests %></dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Revenue</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-600">$<%= @report_data.total_revenue |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-gray-500 truncate">Growth Rate</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @report_data.growth_rate %>%</dd>
                </div>
              </div>
            
            <% "user_activity" -> %>
              <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Daily Active Users</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= @report_data.daily_active_users |> Number.Delimit.number_to_delimited() %></dd>
                </div>
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Weekly Active Users</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= @report_data.weekly_active_users |> Number.Delimit.number_to_delimited() %></dd>
                </div>
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Monthly Active Users</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= @report_data.monthly_active_users |> Number.Delimit.number_to_delimited() %></dd>
                </div>
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Retention Rate</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= @report_data.user_retention_rate %>%</dd>
                </div>
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Avg Session Duration</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900"><%= @report_data.avg_session_duration %></dd>
                </div>
              </div>
            
            <% "contest_performance" -> %>
              <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-purple-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-purple-600 truncate">Total Contests</dt>
                  <dd class="mt-1 text-3xl font-semibold text-purple-900"><%= @report_data.total_contests_created %></dd>
                </div>
                <div class="bg-purple-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-purple-600 truncate">Completed Contests</dt>
                  <dd class="mt-1 text-3xl font-semibold text-purple-900"><%= @report_data.completed_contests %></dd>
                </div>
                <div class="bg-purple-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-purple-600 truncate">Avg Participants</dt>
                  <dd class="mt-1 text-3xl font-semibold text-purple-900"><%= @report_data.avg_participants %></dd>
                </div>
                <div class="bg-purple-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-purple-600 truncate">Most Popular Sport</dt>
                  <dd class="mt-1 text-3xl font-semibold text-purple-900"><%= @report_data.most_popular_sport %></dd>
                </div>
                <div class="bg-purple-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-purple-600 truncate">Prize Pool Distributed</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-600">$<%= @report_data.prize_pool_distributed |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
              </div>
            
            <% "financial" -> %>
              <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-green-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-green-600 truncate">Total Revenue</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-900">$<%= @report_data.total_revenue |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
                <div class="bg-red-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-red-600 truncate">Total Expenses</dt>
                  <dd class="mt-1 text-3xl font-semibold text-red-900">$<%= @report_data.total_expenses |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
                <div class="bg-green-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-green-600 truncate">Net Profit</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-900">$<%= @report_data.net_profit |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
                <div class="bg-blue-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-blue-600 truncate">Avg Revenue Per User</dt>
                  <dd class="mt-1 text-3xl font-semibold text-blue-900">$<%= @report_data.avg_revenue_per_user |> Number.Currency.number_to_currency(precision: 2) %></dd>
                </div>
                <div class="bg-green-50 px-4 py-5 sm:p-6 rounded-lg">
                  <dt class="text-sm font-medium text-green-600 truncate">Payment Success Rate</dt>
                  <dd class="mt-1 text-3xl font-semibold text-green-900"><%= @report_data.payment_success_rate %>%</dd>
                </div>
              </div>
            
            <% _ -> %>
              <div class="text-center py-12">
                <.icon name="hero-chart-bar" class="mx-auto h-12 w-12 text-gray-400" />
                <h3 class="mt-2 text-sm font-semibold text-gray-900">No data available</h3>
                <p class="mt-1 text-sm text-gray-500">Select a report type and generate data to view results.</p>
              </div>
          <% end %>
          
          <!-- Export Actions -->
          <div class="mt-6 flex justify-end space-x-3">
            <button
              type="button"
              phx-click="export_report"
              phx-value-format="csv"
              class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              <.icon name="hero-document-arrow-down" class="h-4 w-4 mr-2" />
              Export CSV
            </button>
            <button
              type="button"
              phx-click="export_report"
              phx-value-format="pdf"
              class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              <.icon name="hero-document-arrow-down" class="h-4 w-4 mr-2" />
              Export PDF
            </button>
            <button
              type="button"
              phx-click="export_report"
              phx-value-format="xlsx"
              class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
            >
              <.icon name="hero-document-arrow-down" class="h-4 w-4 mr-2" />
              Export Excel
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Reports -->
  <div class="mt-8">
    <div class="bg-white shadow sm:rounded-md">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Recent Reports</h3>
        <div class="flow-root">
          <ul role="list" class="-my-5 divide-y divide-gray-200">
            <%= for report <- @reports do %>
              <li class="py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <.icon name="hero-document-text" class="h-8 w-8 text-gray-400" />
                  </div>
                  <div class="min-w-0 flex-1">
                    <p class="truncate text-sm font-medium text-gray-900"><%= report.name %></p>
                    <p class="truncate text-sm text-gray-500">
                      Last generated: <%= Calendar.strftime(report.last_generated, "%B %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <div class="flex-shrink-0">
                    <span class={[
                      "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium",
                      if(report.status == "completed",
                        do: "bg-green-100 text-green-800",
                        else: "bg-yellow-100 text-yellow-800"
                      )
                    ]}>
                      <%= String.capitalize(report.status) %>
                    </span>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <%= if @loading do %>
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-sm w-full mx-4">
        <div class="flex items-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-900">Generating Report</p>
            <p class="text-sm text-gray-500">Please wait while we process your data...</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>