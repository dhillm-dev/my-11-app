<.header>
  Contests
  <:subtitle>Manage fantasy sports contests and their entries</:subtitle>
  <:actions>
    <.button phx-click="toggle_filters" class="mr-3">
      <.icon name="hero-funnel" class="-ml-1 mr-2 h-4 w-4" />
      Filters
    </.button>
    <.link patch={~p"/admin/contests/new"}>
      <.button>
        <.icon name="hero-plus" class="-ml-1 mr-2 h-4 w-4" />
        New Contest
      </.button>
    </.link>
  </:actions>
</.header>

<!-- Stats Cards -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-puzzle-piece" class="h-6 w-6 text-gray-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Contests</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @stats[:total] || 0 %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-play" class="h-6 w-6 text-green-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Live Contests</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @stats[:live] || 0 %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-clock" class="h-6 w-6 text-blue-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Upcoming</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @stats[:upcoming] || 0 %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-currency-dollar" class="h-6 w-6 text-yellow-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Prize Pool</dt>
            <dd class="text-lg font-medium text-gray-900">$<%= @stats[:total_prize_pool] || 0 %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div :if={@show_filters} class="bg-white shadow rounded-lg p-6 mb-6">
  <.form for={%{}} phx-change="filter" class="space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
        <input
          type="text"
          name="filters[search]"
          value={@filters["search"]}
          placeholder="Search contests..."
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
        />
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <select
          name="filters[status]"
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
        >
          <option value="all" selected={@filters["status"] == "all"}>All Statuses</option>
          <option value="draft" selected={@filters["status"] == "draft"}>Draft</option>
          <option value="published" selected={@filters["status"] == "published"}>Published</option>
          <option value="live" selected={@filters["status"] == "live"}>Live</option>
          <option value="completed" selected={@filters["status"] == "completed"}>Completed</option>
          <option value="cancelled" selected={@filters["status"] == "cancelled"}>Cancelled</option>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
        <select
          name="filters[type]"
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
        >
          <option value="all" selected={@filters["type"] == "all"}>All Types</option>
          <option value="free" selected={@filters["type"] == "free"}>Free</option>
          <option value="paid" selected={@filters["type"] == "paid"}>Paid</option>
          <option value="private" selected={@filters["type"] == "private"}>Private</option>
        </select>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
        <select
          name="filters[sort_by]"
          class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
        >
          <option value="inserted_at" selected={@filters["sort_by"] == "inserted_at"}>Created Date</option>
          <option value="name" selected={@filters["sort_by"] == "name"}>Name</option>
          <option value="entry_fee" selected={@filters["sort_by"] == "entry_fee"}>Entry Fee</option>
          <option value="total_prize_pool" selected={@filters["sort_by"] == "total_prize_pool"}>Prize Pool</option>
          <option value="max_entries" selected={@filters["sort_by"] == "max_entries"}>Max Entries</option>
          <option value="status" selected={@filters["sort_by"] == "status"}>Status</option>
        </select>
      </div>
    </div>
  </.form>
</div>

<!-- Bulk Actions -->
<div :if={MapSet.size(@selected_contests) > 0} class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <.icon name="hero-information-circle" class="h-5 w-5 text-blue-400 mr-2" />
      <span class="text-sm text-blue-700">
        <%= MapSet.size(@selected_contests) %> contest(s) selected
      </span>
    </div>
    <div class="flex space-x-2">
      <button
        phx-click="bulk_action"
        phx-value-action="publish"
        data-confirm="Are you sure you want to publish the selected contests?"
        class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700"
      >
        <.icon name="hero-play" class="-ml-0.5 mr-1 h-3 w-3" />
        Publish
      </button>
      <button
        phx-click="bulk_action"
        phx-value-action="cancel"
        data-confirm="Are you sure you want to cancel the selected contests?"
        class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-yellow-600 hover:bg-yellow-700"
      >
        <.icon name="hero-pause" class="-ml-0.5 mr-1 h-3 w-3" />
        Cancel
      </button>
      <button
        phx-click="bulk_action"
        phx-value-action="delete"
        data-confirm="Are you sure you want to delete the selected contests? This action cannot be undone."
        class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-red-600 hover:bg-red-700"
      >
        <.icon name="hero-trash" class="-ml-0.5 mr-1 h-3 w-3" />
        Delete
      </button>
    </div>
  </div>
</div>

<!-- Contests Table -->
<div class="bg-white shadow overflow-hidden sm:rounded-md">
  <div class="min-w-full">
    <div class="bg-gray-50 px-6 py-3 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input
            type="checkbox"
            phx-click="select_all_contests"
            phx-value-checked={if MapSet.size(@selected_contests) == length(@contests) and length(@contests) > 0, do: "false", else: "true"}
            checked={MapSet.size(@selected_contests) == length(@contests) and length(@contests) > 0}
            class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
          />
          <span class="ml-3 text-sm font-medium text-gray-900">Select All</span>
        </div>
        <div class="text-sm text-gray-500">
          Showing <%= length(@contests) %> of <%= @pagination["total_count"] %> contests
        </div>
      </div>
    </div>
    
    <div class="bg-white">
      <div class="grid grid-cols-12 gap-4 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b border-gray-200">
        <div class="col-span-1"></div>
        <div class="col-span-3">
          <button phx-click="sort" phx-value-field="name" class="group inline-flex">
            Contest
            <.icon name="hero-chevron-up-down" class="ml-1 h-3 w-3" />
          </button>
        </div>
        <div class="col-span-2">
          <button phx-click="sort" phx-value-field="status" class="group inline-flex">
            Status
            <.icon name="hero-chevron-up-down" class="ml-1 h-3 w-3" />
          </button>
        </div>
        <div class="col-span-1">
          <button phx-click="sort" phx-value-field="entry_fee" class="group inline-flex">
            Entry Fee
            <.icon name="hero-chevron-up-down" class="ml-1 h-3 w-3" />
          </button>
        </div>
        <div class="col-span-1">
          <button phx-click="sort" phx-value-field="total_prize_pool" class="group inline-flex">
            Prize Pool
            <.icon name="hero-chevron-up-down" class="ml-1 h-3 w-3" />
          </button>
        </div>
        <div class="col-span-1">
          Entries
        </div>
        <div class="col-span-2">
          <button phx-click="sort" phx-value-field="inserted_at" class="group inline-flex">
            Created
            <.icon name="hero-chevron-up-down" class="ml-1 h-3 w-3" />
          </button>
        </div>
        <div class="col-span-1">Actions</div>
      </div>
      
      <div :for={contest <- @contests} id={"contest-#{contest.id}"} class="grid grid-cols-12 gap-4 px-6 py-4 border-b border-gray-200 hover:bg-gray-50">
        <div class="col-span-1 flex items-center">
          <input
            type="checkbox"
            phx-click="select_contest"
            phx-value-id={contest.id}
            phx-value-checked={if MapSet.member?(@selected_contests, contest.id), do: "false", else: "true"}
            checked={MapSet.member?(@selected_contests, contest.id)}
            class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
          />
        </div>
        
        <div class="col-span-3">
          <div class="flex items-center">
            <div>
              <button
                phx-click="show_contest_details"
                phx-value-id={contest.id}
                class="text-sm font-medium text-indigo-600 hover:text-indigo-900"
              >
                <%= contest.name %>
              </button>
              <div class="text-xs text-gray-500">
                <%= contest.type |> String.capitalize() %> • <%= contest.match.home_team %> vs <%= contest.match.away_team %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-span-2">
          <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{Contest.status_badge_class(contest)}"}>
            <%= String.capitalize(contest.status) %>
          </span>
        </div>
        
        <div class="col-span-1 text-sm text-gray-900">
          <%= if contest.entry_fee > 0 do %>
            $<%= contest.entry_fee %>
          <% else %>
            Free
          <% end %>
        </div>
        
        <div class="col-span-1 text-sm text-gray-900">
          $<%= contest.total_prize_pool %>
        </div>
        
        <div class="col-span-1 text-sm text-gray-900">
          <%= contest.current_entries %>/<%= contest.max_entries %>
          <div class="w-full bg-gray-200 rounded-full h-1.5 mt-1">
            <div class="bg-blue-600 h-1.5 rounded-full" style={"width: #{Contest.fill_percentage(contest)}%"}></div>
          </div>
        </div>
        
        <div class="col-span-2 text-sm text-gray-500">
          <%= Calendar.strftime(contest.inserted_at, "%b %d, %Y") %>
          <div class="text-xs">
            <%= Calendar.strftime(contest.inserted_at, "%I:%M %p") %>
          </div>
        </div>
        
        <div class="col-span-1">
          <div class="flex items-center space-x-2">
            <%= if contest.status == "draft" do %>
              <button
                phx-click="publish_contest"
                phx-value-id={contest.id}
                class="text-green-600 hover:text-green-900"
                title="Publish Contest"
              >
                <.icon name="hero-play" class="h-4 w-4" />
              </button>
            <% end %>
            
            <%= if contest.status in ["published", "live"] do %>
              <button
                phx-click="cancel_contest"
                phx-value-id={contest.id}
                data-confirm="Are you sure you want to cancel this contest?"
                class="text-yellow-600 hover:text-yellow-900"
                title="Cancel Contest"
              >
                <.icon name="hero-pause" class="h-4 w-4" />
              </button>
            <% end %>
            
            <.link patch={~p"/admin/contests/#{contest}/edit"} class="text-indigo-600 hover:text-indigo-900" title="Edit">
              <.icon name="hero-pencil" class="h-4 w-4" />
            </.link>
            
            <.link
              phx-click={JS.push("delete", value: %{id: contest.id}) |> hide("#contest-#{contest.id}")}
              data-confirm="Are you sure you want to delete this contest?"
              class="text-red-600 hover:text-red-900"
              title="Delete"
            >
              <.icon name="hero-trash" class="h-4 w-4" />
            </.link>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Pagination -->
<div :if={@pagination["total_pages"] > 1} class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-6">
  <div class="flex-1 flex justify-between sm:hidden">
    <button
      :if={@pagination["page"] > 1}
      phx-click="paginate"
      phx-value-page={@pagination["page"] - 1}
      class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
    >
      Previous
    </button>
    <button
      :if={@pagination["page"] < @pagination["total_pages"]}
      phx-click="paginate"
      phx-value-page={@pagination["page"] + 1}
      class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
    >
      Next
    </button>
  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing page <span class="font-medium"><%= @pagination["page"] %></span> of <span class="font-medium"><%= @pagination["total_pages"] %></span>
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
        <button
          :if={@pagination["page"] > 1}
          phx-click="paginate"
          phx-value-page={@pagination["page"] - 1}
          class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
        >
          <.icon name="hero-chevron-left" class="h-5 w-5" />
        </button>
        
        <%= for page <- max(1, @pagination["page"] - 2)..min(@pagination["total_pages"], @pagination["page"] + 2) do %>
          <button
            phx-click="paginate"
            phx-value-page={page}
            class={[
              "relative inline-flex items-center px-4 py-2 border text-sm font-medium",
              if(page == @pagination["page"],
                do: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600",
                else: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
              )
            ]}
          >
            <%= page %>
          </button>
        <% end %>
        
        <button
          :if={@pagination["page"] < @pagination["total_pages"]}
          phx-click="paginate"
          phx-value-page={@pagination["page"] + 1}
          class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
        >
          <.icon name="hero-chevron-right" class="h-5 w-5" />
        </button>
      </nav>
    </div>
  </div>
</div>

<!-- Contest Details Drawer -->
<div
  :if={@show_detail_drawer and @selected_contest}
  class="fixed inset-0 overflow-hidden z-50"
  phx-click-away="close_detail_drawer"
>
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
    <section class="absolute inset-y-0 right-0 pl-10 max-w-full flex">
      <div class="w-screen max-w-md">
        <div class="h-full flex flex-col bg-white shadow-xl overflow-y-scroll">
          <div class="px-4 py-6 bg-gray-50 sm:px-6">
            <div class="flex items-start justify-between">
              <h2 class="text-lg font-medium text-gray-900">Contest Details</h2>
              <button
                phx-click="close_detail_drawer"
                class="rounded-md bg-gray-50 text-gray-400 hover:text-gray-500 focus:ring-2 focus:ring-indigo-500"
              >
                <.icon name="hero-x-mark" class="h-6 w-6" />
              </button>
            </div>
          </div>
          
          <div class="flex-1 px-4 py-6 sm:px-6">
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-medium text-gray-900"><%= @selected_contest.name %></h3>
                <p class="mt-1 text-sm text-gray-500"><%= @selected_contest.description %></p>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Status</dt>
                  <dd class="mt-1">
                    <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{Contest.status_badge_class(@selected_contest)}"}>
                      <%= String.capitalize(@selected_contest.status) %>
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Type</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= String.capitalize(@selected_contest.type) %></dd>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Entry Fee</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= if @selected_contest.entry_fee > 0 do %>
                      $<%= @selected_contest.entry_fee %>
                    <% else %>
                      Free
                    <% end %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Prize Pool</dt>
                  <dd class="mt-1 text-sm text-gray-900">$<%= @selected_contest.total_prize_pool %></dd>
                </div>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Entries</dt>
                <dd class="mt-1">
                  <div class="flex items-center justify-between text-sm text-gray-900">
                    <span><%= @selected_contest.current_entries %> / <%= @selected_contest.max_entries %></span>
                    <span><%= Contest.fill_percentage(@selected_contest) %>% filled</span>
                  </div>
                  <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full" style={"width: #{Contest.fill_percentage(@selected_contest)}%"}></div>
                  </div>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Match</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @selected_contest.match.home_team %> vs <%= @selected_contest.match.away_team %>
                  <div class="text-xs text-gray-500">
                    <%= Calendar.strftime(@selected_contest.match.kickoff, "%B %d, %Y at %I:%M %p") %>
                  </div>
                </dd>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Registration Opens</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= Calendar.strftime(@selected_contest.registration_start, "%b %d, %I:%M %p") %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Registration Closes</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= Calendar.strftime(@selected_contest.registration_end, "%b %d, %I:%M %p") %>
                  </dd>
                </div>
              </div>
            </div>
            
            <div class="mt-8 flex space-x-3">
              <.link patch={~p"/admin/contests/#{@selected_contest}/edit"} class="flex-1">
                <.button class="w-full bg-indigo-600 hover:bg-indigo-700">
                  <.icon name="hero-pencil" class="-ml-1 mr-2 h-4 w-4" />
                  Edit Contest
                </.button>
              </.link>
              
              <.link navigate={~p"/admin/contests/#{@selected_contest}"} class="flex-1">
                <.button class="w-full bg-gray-600 hover:bg-gray-700">
                  <.icon name="hero-eye" class="-ml-1 mr-2 h-4 w-4" />
                  View Details
                </.button>
              </.link>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>

<.modal :if={@live_action in [:new, :edit]} id="contest-modal" show on_cancel={JS.patch(~p"/admin/contests")}>
  <.live_component
    module={PicknwinAdminWeb.ContestLive.FormComponent}
    id={@contest.id || :new}
    title={@page_title}
    action={@live_action}
    contest={@contest}
    patch={~p"/admin/contests"}
  />
</.modal>