<.header>
  Contest Details
  <:subtitle>Manage contest settings, entries, and prize distribution</:subtitle>
  <:actions>
    <.link patch={~p"/admin/contests/#{@contest}/edit"} phx-click={JS.push_focus()}>
      <.button>Edit contest</.button>
    </.link>
  </:actions>
</.header>

<!-- Contest Overview -->
<div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= @contest.name %>
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      <%= @contest.description %>
    </p>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{Contest.status_badge_class(@contest)}"}>
            <%= String.capitalize(@contest.status) %>
          </span>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Type</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= String.capitalize(@contest.type) %>
          <%= if @contest.is_private do %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
              Private
            </span>
          <% end %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Match</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @contest.match.home_team %> vs <%= @contest.match.away_team %>
          <div class="text-xs text-gray-500">
            <%= @contest.match.league %> • <%= Calendar.strftime(@contest.match.kickoff, "%B %d, %Y at %I:%M %p") %>
          </div>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Entry Fee</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= if @contest.entry_fee > 0 do %>
            $<%= @contest.entry_fee %>
          <% else %>
            Free
          <% end %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Prize Pool</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          $<%= @contest.total_prize_pool %>
          <%= if @contest.first_prize do %>
            <span class="text-xs text-gray-500 ml-2">(1st: $<%= @contest.first_prize %>)</span>
          <% end %>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Entries</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <div class="flex items-center justify-between">
            <span><%= @contest.current_entries %> / <%= @contest.max_entries %></span>
            <span class="text-xs text-gray-500"><%= Contest.fill_percentage(@contest) %>% filled</span>
          </div>
          <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full" style={"width: #{Contest.fill_percentage(@contest)}%"}></div>
          </div>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Registration Period</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= Calendar.strftime(@contest.registration_start, "%B %d, %Y at %I:%M %p") %>
          <br>
          <span class="text-xs text-gray-500">to</span>
          <%= Calendar.strftime(@contest.registration_end, "%B %d, %Y at %I:%M %p") %>
        </dd>
      </div>
      <%= if @contest.salary_cap do %>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Salary Cap</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            $<%= @contest.salary_cap %>
          </dd>
        </div>
      <% end %>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Team Size</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @contest.min_team_size %> - <%= @contest.max_team_size %> players
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Multipliers</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          Captain: <%= @contest.captain_multiplier %>x
          <%= if @contest.vice_captain_multiplier do %>
            • Vice Captain: <%= @contest.vice_captain_multiplier %>x
          <% end %>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Created</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= Calendar.strftime(@contest.inserted_at, "%B %d, %Y at %I:%M %p") %>
          <%= if @contest.created_by_id do %>
            <span class="text-xs text-gray-500">by Admin ID: <%= @contest.created_by_id %></span>
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<!-- Contest Actions -->
<div class="mt-8 bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Contest Actions</h3>
    <div class="flex flex-wrap gap-3">
      <%= if @contest.status == "draft" do %>
        <button
          phx-click="publish_contest"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
        >
          <.icon name="hero-play" class="-ml-1 mr-2 h-4 w-4" />
          Publish Contest
        </button>
      <% end %>
      
      <%= if @contest.status in ["published", "live"] do %>
        <button
          phx-click="cancel_contest"
          data-confirm="Are you sure you want to cancel this contest?"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
        >
          <.icon name="hero-pause" class="-ml-1 mr-2 h-4 w-4" />
          Cancel Contest
        </button>
      <% end %>
      
      <%= if @contest.status == "completed" and @contest.current_entries > 0 do %>
        <button
          phx-click="calculate_prizes"
          data-confirm="Are you sure you want to calculate and distribute prizes?"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500"
        >
          <.icon name="hero-calculator" class="-ml-1 mr-2 h-4 w-4" />
          Calculate Prizes
        </button>
      <% end %>
      
      <%= if @contest.current_entries > 0 do %>
        <button
          phx-click="export_entries"
          class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          <.icon name="hero-arrow-down-tray" class="-ml-1 mr-2 h-4 w-4" />
          Export Entries
        </button>
      <% end %>
    </div>
  </div>
</div>

<!-- Contest Entries -->
<div class="mt-8 bg-white shadow overflow-hidden sm:rounded-md">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Contest Entries
      <span class="ml-2 text-sm text-gray-500">(<%= length(@entries) %> shown)</span>
    </h3>
  </div>
  
  <%= if length(@entries) > 0 do %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Entry #
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Team Name
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              User
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Points
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Rank
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Prize
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr :for={entry <- @entries} class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              #<%= entry.entry_number %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= entry.team_name %></div>
              <div class="text-xs text-gray-500"><%= entry.lineup_count || 0 %> players</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= entry.user.username %></div>
              <div class="text-xs text-gray-500"><%= entry.user.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= entry.total_points || 0 %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= if entry.rank do %>
                #<%= entry.rank %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= if entry.prize_amount && entry.prize_amount > 0 do %>
                $<%= entry.prize_amount %>
                <%= if entry.is_winner do %>
                  <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Winner
                  </span>
                <% end %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{ContestEntry.status_badge_class(entry)}"}>
                <%= String.capitalize(entry.status) %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <.icon name="hero-users" class="mx-auto h-12 w-12 text-gray-400" />
      <h3 class="mt-2 text-sm font-medium text-gray-900">No entries yet</h3>
      <p class="mt-1 text-sm text-gray-500">
        This contest doesn't have any entries yet.
      </p>
    </div>
  <% end %>
</div>

<!-- Contest Rules -->
<%= if @contest.rules do %>
  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Contest Rules</h3>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="text-sm text-gray-900 whitespace-pre-wrap"><%= @contest.rules %></div>
    </div>
  </div>
<% end %>

<!-- Actions -->
<div class="mt-8 flex justify-between">
  <.back navigate={~p"/admin/contests"}>Back to contests</.back>
  
  <div class="flex space-x-3">
    <.link patch={~p"/admin/contests/#{@contest}/edit"}>
      <.button class="bg-indigo-600 hover:bg-indigo-700">
        <.icon name="hero-pencil" class="-ml-1 mr-2 h-4 w-4" />
        Edit
      </.button>
    </.link>
    
    <.link
      phx-click={JS.push("delete", value: %{id: @contest.id}) |> hide("#contest-#{@contest.id}")}
      data-confirm="Are you sure you want to delete this contest?"
    >
      <.button class="bg-red-600 hover:bg-red-700">
        <.icon name="hero-trash" class="-ml-1 mr-2 h-4 w-4" />
        Delete
      </.button>
    </.link>
  </div>
</div>

<.modal :if={@live_action == :edit} id="contest-modal" show on_cancel={JS.patch(~p"/admin/contests/#{@contest}")}>
  <.live_component
    module={PicknwinAdminWeb.ContestLive.FormComponent}
    id={@contest.id}
    title={@page_title}
    action={@live_action}
    contest={@contest}
    patch={~p"/admin/contests/#{@contest}"}
  />
</.modal>