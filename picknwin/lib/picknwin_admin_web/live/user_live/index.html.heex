<.header>
  Users Management
  <:subtitle>Manage user accounts, verification status, and user activities</:subtitle>
  <:actions>
    <.link patch={~p"/admin/users/new"}>
      <.button class="bg-indigo-600 hover:bg-indigo-700">
        <.icon name="hero-plus" class="-ml-1 mr-2 h-4 w-4" />
        Add User
      </.button>
    </.link>
  </:actions>
</.header>

<!-- Stats Cards -->
<div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-users" class="h-6 w-6 text-gray-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-check-circle" class="h-6 w-6 text-green-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Active Users</dt>
            <dd class="text-lg font-medium text-gray-900">0</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-shield-check" class="h-6 w-6 text-blue-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Verified Users</dt>
            <dd class="text-lg font-medium text-gray-900">0</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <.icon name="hero-calendar" class="h-6 w-6 text-purple-400" />
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">New This Month</dt>
            <dd class="text-lg font-medium text-gray-900">0</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters and Search -->
<div class="mt-8 bg-white shadow rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0 sm:space-x-4">
      <!-- Search -->
      <div class="flex-1 min-w-0">
        <.form for={%{}} as={:search} phx-change="search" class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <.icon name="hero-magnifying-glass" class="h-5 w-5 text-gray-400" />
          </div>
          <input
            type="text"
            name="search[query]"
            value={@search_query}
            placeholder="Search users by name, email, or username..."
            class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
          />
        </.form>
      </div>
      
      <!-- Filters -->
      <div class="flex space-x-3">
        <select
          phx-change="filter_status"
          name="status"
          class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
        >
          <option value="all" selected={@status_filter == "all"}>All Status</option>
          <option value="active" selected={@status_filter == "active"}>Active</option>
          <option value="inactive" selected={@status_filter == "inactive"}>Inactive</option>
          <option value="suspended" selected={@status_filter == "suspended"}>Suspended</option>
          <option value="pending" selected={@status_filter == "pending"}>Pending</option>
        </select>
        
        <select
          phx-change="filter_role"
          name="role"
          class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"
        >
          <option value="all" selected={@role_filter == "all"}>All Roles</option>
          <option value="user" selected={@role_filter == "user"}>User</option>
          <option value="premium" selected={@role_filter == "premium"}>Premium</option>
          <option value="vip" selected={@role_filter == "vip"}>VIP</option>
        </select>
      </div>
    </div>
  </div>
</div>

<!-- Bulk Actions -->
<div class="mt-4 bg-white shadow rounded-lg" :if={length(@selected_users) > 0}>
  <div class="px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <span class="text-sm text-gray-700">
          <%= length(@selected_users) %> user(s) selected
        </span>
      </div>
      <div class="flex space-x-2">
        <button
          phx-click="bulk_action"
          phx-value-action="activate"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
        >
          <.icon name="hero-check" class="-ml-0.5 mr-2 h-4 w-4" />
          Activate
        </button>
        <button
          phx-click="bulk_action"
          phx-value-action="deactivate"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
        >
          <.icon name="hero-pause" class="-ml-0.5 mr-2 h-4 w-4" />
          Deactivate
        </button>
        <button
          phx-click="bulk_action"
          phx-value-action="suspend"
          class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
        >
          <.icon name="hero-no-symbol" class="-ml-0.5 mr-2 h-4 w-4" />
          Suspend
        </button>
        <button
          phx-click="bulk_action"
          phx-value-action="export"
          class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          <.icon name="hero-arrow-down-tray" class="-ml-0.5 mr-2 h-4 w-4" />
          Export
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Users Table -->
<div class="mt-4 bg-white shadow overflow-hidden sm:rounded-md">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left">
            <input
              type="checkbox"
              phx-click="select_all_users"
              class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
            />
          </th>
          <th
            phx-click="sort"
            phx-value-field="username"
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
          >
            User
            <%= if @sort_by == "username" do %>
              <.icon name={if @sort_order == "asc", do: "hero-chevron-up", else: "hero-chevron-down"} class="inline h-4 w-4" />
            <% end %>
          </th>
          <th
            phx-click="sort"
            phx-value-field="email"
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
          >
            Email
            <%= if @sort_by == "email" do %>
              <.icon name={if @sort_order == "asc", do: "hero-chevron-up", else: "hero-chevron-down"} class="inline h-4 w-4" />
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Role
          </th>
          <th
            phx-click="sort"
            phx-value-field="inserted_at"
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
          >
            Joined
            <%= if @sort_by == "inserted_at" do %>
              <.icon name={if @sort_order == "asc", do: "hero-chevron-up", else: "hero-chevron-down"} class="inline h-4 w-4" />
            <% end %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody id="users" phx-update="stream" class="bg-white divide-y divide-gray-200">
        <tr :for={{dom_id, user} <- @streams.users} id={dom_id} class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <input
              type="checkbox"
              phx-click="select_user"
              phx-value-id={user.id}
              checked={user.id in @selected_users}
              class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
            />
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center cursor-pointer" phx-click="show_user_details" phx-value-id={user.id}>
              <div class="flex-shrink-0 h-10 w-10">
                <%= if user.avatar_url do %>
                  <img class="h-10 w-10 rounded-full" src={user.avatar_url} alt={user.username} />
                <% else %>
                  <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700">
                      <%= String.first(user.username || user.email) |> String.upcase() %>
                    </span>
                  </div>
                <% end %>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900"><%= user.username || "N/A" %></div>
                <div class="text-sm text-gray-500">
                  <%= user.first_name %> <%= user.last_name %>
                  <%= if user.is_verified do %>
                    <.icon name="hero-check-badge" class="inline h-4 w-4 text-blue-500 ml-1" />
                  <% end %>
                </div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= user.email %></div>
            <div class="text-sm text-gray-500">
              <%= if user.email_verified_at do %>
                <span class="text-green-600">Verified</span>
              <% else %>
                <span class="text-red-600">Unverified</span>
              <% end %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{User.status_badge_class(user)}"}>
              <%= String.capitalize(user.status || "active") %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= String.capitalize(user.role || "user") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= Calendar.strftime(user.inserted_at, "%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <div class="flex space-x-2">
              <.link patch={~p"/admin/users/#{user}/edit"} class="text-indigo-600 hover:text-indigo-900">
                <.icon name="hero-pencil" class="h-4 w-4" />
              </.link>
              <%= if !user.is_verified do %>
                <button
                  phx-click="verify_user"
                  phx-value-id={user.id}
                  class="text-green-600 hover:text-green-900"
                  title="Verify User"
                >
                  <.icon name="hero-shield-check" class="h-4 w-4" />
                </button>
              <% end %>
              <button
                phx-click="reset_password"
                phx-value-id={user.id}
                class="text-yellow-600 hover:text-yellow-900"
                title="Reset Password"
              >
                <.icon name="hero-key" class="h-4 w-4" />
              </button>
              <.link
                phx-click={JS.push("delete", value: %{id: user.id}) |> hide("##{dom_id}")}
                data-confirm="Are you sure you want to delete this user?"
                class="text-red-600 hover:text-red-900"
              >
                <.icon name="hero-trash" class="h-4 w-4" />
              </.link>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<div class="mt-4 bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 rounded-lg shadow">
  <div class="flex-1 flex justify-between sm:hidden">
    <button
      :if={@page > 1}
      phx-click="paginate"
      phx-value-page={@page - 1}
      class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
    >
      Previous
    </button>
    <button
      :if={@page * @per_page < @total_count}
      phx-click="paginate"
      phx-value-page={@page + 1}
      class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
    >
      Next
    </button>
  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= (@page - 1) * @per_page + 1 %></span>
        to
        <span class="font-medium"><%= min(@page * @per_page, @total_count) %></span>
        of
        <span class="font-medium"><%= @total_count %></span>
        results
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
        <button
          :if={@page > 1}
          phx-click="paginate"
          phx-value-page={@page - 1}
          class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
        >
          <.icon name="hero-chevron-left" class="h-5 w-5" />
        </button>
        
        <%= for page_num <- max(1, @page - 2)..min(@page + 2, ceil(@total_count / @per_page)) do %>
          <button
            phx-click="paginate"
            phx-value-page={page_num}
            class={[
              "relative inline-flex items-center px-4 py-2 border text-sm font-medium",
              if(page_num == @page,
                do: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600",
                else: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50"
              )
            ]}
          >
            <%= page_num %>
          </button>
        <% end %>
        
        <button
          :if={@page * @per_page < @total_count}
          phx-click="paginate"
          phx-value-page={@page + 1}
          class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
        >
          <.icon name="hero-chevron-right" class="h-5 w-5" />
        </button>
      </nav>
    </div>
  </div>
</div>

<!-- User Details Drawer -->
<div
  :if={@show_user_drawer}
  class="fixed inset-0 overflow-hidden z-50"
  phx-click-away="close_user_drawer"
>
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
    <section class="absolute inset-y-0 right-0 pl-10 max-w-full flex">
      <div class="w-screen max-w-md">
        <div class="h-full flex flex-col bg-white shadow-xl overflow-y-scroll">
          <div class="px-4 py-6 bg-gray-50 sm:px-6">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-medium text-gray-900">User Details</h2>
              <button
                phx-click="close_user_drawer"
                class="rounded-md bg-gray-50 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <.icon name="hero-x-mark" class="h-6 w-6" />
              </button>
            </div>
          </div>
          
          <%= if @selected_user do %>
            <div class="px-4 py-5 sm:px-6">
              <div class="flex items-center mb-4">
                <%= if @selected_user.avatar_url do %>
                  <img class="h-16 w-16 rounded-full" src={@selected_user.avatar_url} alt={@selected_user.username} />
                <% else %>
                  <div class="h-16 w-16 rounded-full bg-gray-300 flex items-center justify-center">
                    <span class="text-xl font-medium text-gray-700">
                      <%= String.first(@selected_user.username || @selected_user.email) |> String.upcase() %>
                    </span>
                  </div>
                <% end %>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= @selected_user.first_name %> <%= @selected_user.last_name %>
                  </h3>
                  <p class="text-sm text-gray-500">@<%= @selected_user.username %></p>
                </div>
              </div>
              
              <dl class="space-y-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Email</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @selected_user.email %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Phone</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @selected_user.phone || "N/A" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Status</dt>
                  <dd class="mt-1">
                    <span class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{User.status_badge_class(@selected_user)}"}>
                      <%= String.capitalize(@selected_user.status || "active") %>
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Role</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= String.capitalize(@selected_user.role || "user") %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Joined</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= Calendar.strftime(@selected_user.inserted_at, "%B %d, %Y at %I:%M %p") %>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Last Login</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= if @selected_user.last_login_at do %>
                      <%= Calendar.strftime(@selected_user.last_login_at, "%B %d, %Y at %I:%M %p") %>
                    <% else %>
                      Never
                    <% end %>
                  </dd>
                </div>
              </dl>
              
              <div class="mt-6 flex space-x-3">
                <.link patch={~p"/admin/users/#{@selected_user}/edit"} class="flex-1">
                  <.button class="w-full bg-indigo-600 hover:bg-indigo-700">
                    <.icon name="hero-pencil" class="-ml-1 mr-2 h-4 w-4" />
                    Edit User
                  </.button>
                </.link>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>

<.modal :if={@live_action in [:new, :edit]} id="user-modal" show on_cancel={JS.patch(~p"/admin/users")}>
  <.live_component
    module={PicknwinAdminWeb.UserLive.FormComponent}
    id={@user.id || :new}
    title={@page_title}
    action={@live_action}
    user={@user}
    patch={~p"/admin/users"}
  />
</.modal>